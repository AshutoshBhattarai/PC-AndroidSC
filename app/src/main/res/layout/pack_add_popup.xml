<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <EditText
            android:id="@+id/addPackName"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_bg_1"
            android:ems="10"
            android:fontFamily="@font/autour_one"
            android:hint="Enter Package Name"
            android:inputType="textPersonName"
            android:padding="10dp"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.079" />

        <EditText
            android:id="@+id/addPackDesc"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="144dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_bg_1"
            android:ems="10"
            android:fontFamily="@font/autour_one"
            android:gravity="start|top"
            android:hint="Enter Description"
            android:inputType="textMultiLine"
            android:padding="10dp"
            android:textSize="15dp"
            app:layout_constraintEnd_toEndOf="@+id/addPackName"
            app:layout_constraintHorizontal_bias="0.483"
            app:layout_constraintStart_toStartOf="@+id/addPackName"
            app:layout_constraintTop_toBottomOf="@+id/addPackImage" />

        <EditText
            android:id="@+id/addPackImage"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginTop="36dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/custom_bg_1"
            android:ems="10"
            android:fontFamily="@font/autour_one"
            android:hint="Enter Image URL/Name"
            android:inputType="textMultiLine"
            android:maxLines="5"
            android:padding="10dp"
            android:textSize="15dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@+id/addPackName"
            app:layout_constraintStart_toStartOf="@+id/addPackName"
            app:layout_constraintTop_toBottomOf="@+id/addPackName" />

        <Button
            android:id="@+id/addPackImagebtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="48dp"
            android:layout_marginEnd="60dp"
            android:background="@drawable/custom_bg_1"
            android:ems="10"
            android:fontFamily="@font/autour_one"
            android:maxLines="5"
            android:padding="10dp"
            android:text="Select Image"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@+id/addPackName"
            app:layout_constraintStart_toStartOf="@+id/addPackName"
            app:layout_constraintTop_toBottomOf="@+id/addPackName" />

        <Button
            android:id="@+id/btnPackSubmit"
            android:layout_width="150dp"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/custom_bg_1"
            android:fontFamily="@font/autour_one"
            android:padding="5dp"
            android:text="Submit"
            android:textSize="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/addPackDesc"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintStart_toStartOf="@+id/addPackDesc"
            app:layout_constraintTop_toBottomOf="@+id/addPackDesc"
            app:layout_constraintVertical_bias="0.113" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:padding="5dp"
            android:text="Description : "
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/addPackDesc"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.097"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="80dp"
            android:fontFamily="@font/autour_one"
            android:padding="5dp"
            android:text="Image : "
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3"
            app:layout_constraintEnd_toEndOf="@+id/addPackName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/addPackName" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/autour_one"
            android:padding="5dp"
            android:text="Title : "
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="16dp"
            app:layout_constraintBottom_toTopOf="@+id/addPackName"
            app:layout_constraintEnd_toEndOf="@+id/addPackName"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/addPackName" />

        <TextView
            android:id="@+id/txtDeletePack2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:fontFamily="@font/autour_one"
            android:padding="5dp"

            android:text="Delete Package"
            android:textColor="@color/primary"
            android:textSize="15dp"

            app:layout_constraintEnd_toEndOf="@+id/addPackName"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>