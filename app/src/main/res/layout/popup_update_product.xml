<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:id="@+id/cusProdName"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="30dp"
        android:ems="10"
        android:hint="Product Name"
        android:background="@drawable/custom_bg_1"
        android:padding="10dp"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/cusProdPrice"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/custom_bg_1"
        android:ems="10"
        android:hint="Price"
        android:inputType="number"
        android:maxLines="5"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="@+id/cusProdName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/cusProdName"
        app:layout_constraintTop_toBottomOf="@+id/cusProdName" />

    <EditText
        android:id="@+id/cusProdStock"
        android:layout_width="100dp"
        android:layout_height="55dp"
        android:layout_marginStart="24dp"
        android:background="@drawable/custom_bg_1"
        android:ems="10"
        android:hint="Stock"
        android:inputType="number"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/cusProdPrice"
        app:layout_constraintStart_toEndOf="@+id/cusProdPrice"
        app:layout_constraintTop_toTopOf="@+id/cusProdPrice"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/btnConfirmCust"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="Change"
        android:background="@drawable/custom_bg_1"
        android:padding="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.943"
        app:layout_constraintStart_toStartOf="@+id/cusProdName"
        app:layout_constraintTop_toBottomOf="@+id/cusProdName" />
</androidx.constraintlayout.widget.ConstraintLayout>